{% embed 'drupal4gov:card-group' with {
  max_columns: 3,
} %}
  {% block content %}
    {{ include('drupal4gov:title-card', {
      title: '<span class="blue">What</span> We Do',
      text: 'Dedicated to empowering government agencies to deliver secure, scalable, and citizen-centric digital solutions.',
      }) }}

    {% embed 'drupal4gov:icon-card' with {
      title: 'DrupalGovCon',
      url: 'https://www.drupalgovcon.org',
      } %}
      {% block media %}
        {{ include('@drupal4gov/../images/icons/capital.svg') }}
      {% endblock %}
    {% endembed %}
    {% embed 'drupal4gov:icon-card' with {
      title: 'Webinars',
      url: '/webinars',
      } %}
      {% block media %}
        {{ include('@drupal4gov/../images/icons/computer.svg') }}
      {% endblock %}
    {% endembed %}
    {% embed 'drupal4gov:icon-card' with {
      title: 'GovSummit',
      url: '/govsummit',
      } %}
      {% block media %}
        {{ include('@drupal4gov/../images/icons/stage.svg') }}
      {% endblock %}
    {% endembed %}
    {% embed 'drupal4gov:icon-card' with {
      title: 'Leadership Exchanges',
      url: 'https://groups.drupal.org/global-training-days',
      } %}
      {% block media %}
        {{ include('@drupal4gov/../images/icons/presentation.svg') }}
      {% endblock %}
    {% endembed %}
    {% embed 'drupal4gov:icon-card' with {
      title: 'Drupal4Gov Days',
      url: '/drupal4govdays',
      } %}
      {% block media %}
        {{ include('@drupal4gov/../images/icons/time.svg') }}
      {% endblock %}
    {% endembed %}
  {% endblock %}
{% endembed %}
